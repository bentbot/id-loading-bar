@media screen and (max-width: 768px)
	.ng-trigger-loadingPostion
		top: 10px !important

.preload
	position: absolute;
	left: -1000px;
	top: -1000px;

.loading-bar
	position: absolute;
	margin: 0;
	padding: 0;
	top: 60px;
	left: 0;
	right: 0;
	z-index: 99999;

.loading-bar-progress
	margin: 0;
	padding: 0;
	z-index: 99998;
	box-shadow: 0 0 10px 0;
	height: 1px;
	opacity: 1 !important;
	
.loading
	transition: opacity .8s ease-in-out;
	position: fixed;
	height: 100%;
	width: 100%;
	top: 0;
	left: 0;
	background: #000;
	opacity: 1;
	z-index: 100;
